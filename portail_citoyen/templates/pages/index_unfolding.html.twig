					<div class="flex gap-x-2.5 items-center fr-mb-2v">
						<p class="fr-badge fr-badge--purple-glycine fr-badge--no-icon fr-text--xs min-h-fit">{{ 'pel.1'|trans }}</p>
						<span class="text-sm">{{ 'pel.1.duration'|trans }}</span>
