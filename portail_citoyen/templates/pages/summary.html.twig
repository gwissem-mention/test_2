{% extends 'common/_complaint.html.twig' %}

{% set current_step_title = 'pel.summary.of.complaint'|trans %}
{% set current_step_number = 6 %}
{% set isAppointmentRequiredOrAsked = complaint.isAppointmentRequired or complaint.appointment.appointmentAsked|default(false) %}
{% if isAppointmentRequiredOrAsked is same as(false) %}
    {% set next_step_title = 'pel.registered.complaint'|trans %}
{% else %}
    {% set next_step_title = 'pel.appointment.booking'|trans %}
{% endif %}

{% block title %}{{ 'pel.summary.of.complaint.title'|trans }}{% endblock %}

{% block content %}
    <div data-controller="form">
        {{ component('summary') }}
    </div>
{% endblock %}
