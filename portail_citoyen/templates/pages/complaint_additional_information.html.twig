{% extends 'common/_complaint.html.twig' %}

{% set current_step_title = 'pel.complaint.additional.informations'|trans %}
{% set current_step_number = 5 %}
{% set next_step_title = 'pel.summary.of.complaint'|trans %}
{% set isAppointmentRequiredOrAsked = complaint.isAppointmentRequired or complaint.appointment.appointmentAsked|default(false) %}

{% block title %}
    {% if isAppointmentRequiredOrAsked is same as(false) %}
        {{ 'pel.complaint.additional.informations.title'|trans }}
    {% else %}
        {{ 'pel.complaint.additional.informations.title.with.appointment'|trans }}
    {% endif %}
{% endblock %}

{% block content %}
    <div data-controller="form">
        <div class="fr-pt-10v fr-pb-12v fr-px-6v fr-py-md-12v fr-px-md-20v">
            <h1 class="text-[28px]/9 md:text-[40px]/[48px] fr-mb-2v">{{ 'pel.complaint.additional.informations'|trans }}</h1>
            <p class="fr-mb-0">{{ 'pel.all.fields.marked.with.an.asterisk.are.mandatory'|trans|raw }}</p>
        </div>
        <hr>
        {{ component('additional_information') }}
    </div>
{% endblock %}
