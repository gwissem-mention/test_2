{% extends 'common/_complaint.html.twig' %}

{% set icon = 'complaint' %}
{% set title = 'pel.my.online.complaint.declaration'|trans %}
{% set current_step_title = 'pel.facts.description'|trans %}
{% set current_step_number = 3 %}
{% set next_step_title = 'pel.goods.concerned'|trans %}
{% set display_footer = false %}

{% block title %}{{ 'pel.description.of.facts.step.3'|trans }}{% endblock %}

{% block content %}
