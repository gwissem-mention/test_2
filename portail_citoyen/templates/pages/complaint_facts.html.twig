        <div class="block lg:hidden p-10">
            <h1 class="text-3xl font-bold mb-3">{{ 'pel.complaint.description.of.facts'|trans }}</h1>
            <div>{{ 'pel.all.fields.marked.with'|trans }} <span class="fr-text--red-marianne font-bold">*</span> {{ 'pel.are.mandatory'|trans }}</div>
        </div>
        <hr class="block lg:hidden">
        {{ component('facts', {class: 'fr-py-1w', fromSummary: from_summary}) }}
    </div>
