{% extends 'common/_complaint.html.twig' %}

{% set current_step_title = 'pel.complaint.your.identity'|trans %}
{% set current_step_number = 2 %}
{% set next_step_title = 'pel.facts.description'|trans %}
{% set isAppointmentRequiredOrAsked = complaint.isAppointmentRequired or complaint.appointment.appointmentAsked|default(false) %}

{% block title %}
    {% if isAppointmentRequiredOrAsked is same as(false) %}
    	{{ 'pel.your.identity.title'|trans }}
    {% else %}
    	{{ 'pel.your.identity.title.with.appointment'|trans }}
    {% endif %}
{% endblock %}

{% block content %}
	<div
        data-controller="form timezone"
        data-timezone-url-value="{{ path('complaint_timezone') }}"
    >
		{{ component('identity', {fromSummary: from_summary}) }}
	</div>
{% endblock %}

{% block end %}
	<a class="fr-btn fr-btn--icon-right fr-icon-arrow-right-line" href="{{ path('complaint_facts') }}">{{ 'pel.complete.my.declaration'|trans }}</a>
{% endblock %}
