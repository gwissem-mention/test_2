<div {{ attributes }}>
    {{ form_start(form, {attr: {'data-action': 'live#action','data-action-name': 'prevent|submit'}}) }}
        <div class="fr-grid-row fr-py-2w">
            <div class="fr-col-6">
                {{ form_row(form.objects) }}
            </div>
        </div>
        <div class="fr-grid-row fr-py-2w">
            <div class="fr-col">
                {{ form_row(form.amountKnown) }}
            </div>
        </div>
        {% if form.amount is defined %}
            <div class="fr-grid-row fr-py-2w">
                <div class="fr-col-4">
                    {{ form_row(form.amount) }}
                </div>
            </div>
        {% endif %}
        <div class="fr-grid-row">
            <div class="fr-col">
                <ul class="fr-btns-group fr-btns-group--right fr-btns-group--inline-reverse fr-btns-group--inline-lg fr-btns-group--icon-left">
                    <li>
                        <button type="submit" class="fr-btn fr-btn--icon-right fr-icon-arrow-right-line" data-next-accordion="4" id="objects_submit">{{ 'pel.next'|trans }}</button>
                    </li>
                    <li>
                        <a href="#" class="fr-btn fr-btn--secondary">{{ 'pel.save'|trans }}</a>
                    </li>
                </ul>
            </div>
        </div>
    {{ form_end(form) }}
</div>
