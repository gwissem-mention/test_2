<div
        {{ attributes }}
>
    <p>{{ 'all.fields.are.required'|trans }}</p>
    {{ form_start(form) }}
    {{ form_row(form.civility) }}
    {{ form_row(form.birthName) }}
    {{ form_row(form.firstnames) }}
    {{ form_row(form.birthDate) }}
    {{ form_row(form.birthCountry) }}
    {{ form_row(form.birthTown) }}
    {% if form.birthDepartment is defined %}
        {{ form_row(form.birthDepartment, {'value':form.birthTown.vars.value|removeTown }) }}
    {% endif %}
    {{ form_row(form.nationality) }}
    {{ form_row(form.job) }}
    <button class="fr-btn" type="submit">{{ 'validate'|trans }}</button>
    {{ form_end(form) }}
</div>
