<h3>{{ 'pel.corporation.legal.information'|trans }}</h3>
<div>
    {{ form_row(form.siren) }}
    {{ form_row(form.name) }}
    {{ form_row(form.function) }}
    {{ form_row(form.nationality) }}
    {{ form_row(form.email) }}
    {{ form_row(form.phone) }}
    {{ form_row(form.addressLocation.country) }}
    {% if form.addressLocation.frenchTown is defined %}
        {{ form_row(form.addressLocation.frenchTown) }}
    {% endif %}
    {% if form.addressLocation.otherTown is defined %}
        {{ form_row(form.addressLocation.otherTown) }}
    {% endif %}
    {% if form.addressLocation.department is defined %}
        {{ form_row(form.addressLocation.department, {'value':form.addressLocation.frenchTown.vars.value|removeTown }) }}
    {% endif %}
    {{ form_row(form.addressNumber) }}
    {% if form.frenchAddressWay is defined %}
        {{ form_row(form.frenchAddressWay) }}
    {% endif %}
    {% if form.foreignAddressWay is defined %}
        {{ form_row(form.foreignAddressWay) }}
    {% endif %}
</div>
