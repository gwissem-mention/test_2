{% extends 'pages/complaint/layout.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-12 text-end">
            <a href="{{ path('complaint_facts', {id:complaint.id}) }}" class="btn btn-secondary">
                <i class="bi bi-arrow-right"></i> {{ 'pel.go.to.tab'|trans }} : {{ 'pel.description.of.facts'|trans }}
            </a>
        </div>
    </div>
    {{ form_start(victim_identity_form) }}
    <fieldset class="border border-secondary bg-light rounded-3 p-3">
        <legend class="float-none w-auto px-3">
            {{ 'pel.moral.victim.information'|trans }}
        </legend>
        <div class="row">
            <div class="col-6">
                {{ form_row(victim_identity_form.companyName) }}
            </div>
            <div class="col-6">
                {{ form_row(victim_identity_form.sirenNumber) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                {{ form_row(victim_identity_form.declarantPosition) }}
            </div>
            <div class="col-6">
                {{ form_row(victim_identity_form.nationality) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                {{ form_row(victim_identity_form.phone) }}
            </div>
            <div class="col-6">
                {{ form_row(victim_identity_form.contactEmail) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                {{ form_row(victim_identity_form.address) }}
            </div>
            <div class="col-6">
                {{ form_row(victim_identity_form.country) }}
            </div>
        </div>
    </fieldset>
    {{ form_end(victim_identity_form, {render_rest: false}) }}
{% endblock %}
