{% embed "common/_modal.html.twig" with {'id':'complaint-send-to-lrp', 'size':'lg'} %}
    {% block attr_sup %}data-complaint-target="sendToLrpModal"{% endblock %}

    {% block title %}
        <div class="fs-4 mb-4">{{ 'pel.validation.sending.complain.to.lrp'|trans }}</div>
    {% endblock %}

    {% block body %}
        <p class="text-center fw-bold m-5 text-grey">{{ 'pel.to.simplify.the.process'|trans }}</p>
        <p class="text-center fs-3 m-5" data-controller="copy-paste">
            <span class="me-1" data-copy-paste-target="declarationNumber">{{ complaint.declarationNumber }}</span>
            <span class="text-blue fr-icon-clipboard-line cursor-pointer" aria-hidden="true" data-action="click->copy-paste#bind"></span>
        </p>
        <p class="text-center fw-bold mt-5 text-grey">{{ 'pel.after.treatment.in.lrp'|trans }}</p>
    {% endblock %}

    {% block footer %}
        <button type="button" class="fr-btn fr-btn--secondary me-3" data-bs-dismiss="modal" id="complaint-send-to-lrp-button-back">{{ 'pel.cancel'|trans }}</button>
        <button type="button" class="fr-btn" data-action="complaint#send" data-complaint-url-param="{{ path('complaint_xml', { id: complaintId }) }}">{{ 'pel.validate.the.sending.to.the.lrp'|trans }}</button>
    {% endblock %}
{% endembed %}
