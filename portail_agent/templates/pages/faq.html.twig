{% extends 'layout.html.twig' %}

{% block body %}
    <h1 class="mt-4">{{ 'pel.faq'|trans }}</h1>
    <h2 class="mb-3">{{ 'pel.faq.find.best.practices'|trans }}</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            {# TO DO : Update categories links #}
            <div class="category border rounded mb-3 p-3">
                <a href="#" class="category__item d-flex justify-content-center align-items-center p-3 border rounded fw-semibold">
                    <i class="bi bi-pc-display-horizontal fs-4 me-3"></i>
                    {{ 'pel.official.informations'|trans }}
                </a>
                <a href="#" class="category__item d-flex justify-content-center align-items-center p-3 border rounded fw-semibold">
                    <i class="bi bi-chat fs-4 me-3"></i>
                    {{ 'pel.questions.answers'|trans }}
                </a>
                <a href="#" class="category__item d-flex justify-content-center align-items-center p-3 border rounded fw-semibold">
                    <i class="bi bi-telephone fs-4 me-3"></i>
                    {{ 'pel.useful.phones'|trans }}
                </a>
            </div>
            <div class="accordion" id="accordion">
                {% for question in questions %}
                    <div class="accordion-item">
                        <div class="accordion-header" id="heading-{{ loop.index }}">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ loop.index }}" aria-expanded="false" aria-controls="collapse-{{ loop.index }}">
                                {{ question.question }}
                            </button>
                        </div>
                        <div id="collapse-{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="heading-{{ loop.index }}" data-bs-parent="#accordion">
                            <div class="accordion-body">
                                {{ question.answer }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
