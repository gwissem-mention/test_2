{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead class="table-head">
            <tr>
                <th scope="col">{{ 'pel.deposit.date'|trans }}</th>
                <th scope="col">{{ 'pel.facts'|trans }}</th>
                <th scope="col">{{ 'pel.facts.date'|trans }}</th>
                <th scope="col">{{ 'pel.alert'|trans }}</th>
                <th scope="col">{{ 'pel.meeting.date'|trans }}</th>
                <th scope="col">{{ 'pel.firstname.lastname'|trans }}</th>
                <th scope="col">{{ 'pel.status'|trans }}</th>
                <th scope="col">{{ 'pel.a.opj.name'|trans }}</th>
                <th scope="col">{{ 'pel.declaration.number'|trans }}</th>
                <th scope="col">{{ 'pel.comments'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for complaint in complaints %}
                <tr>
                    <td>{{ complaint.depositDate|date('d/m/Y') }}</td>
                    <td>{{ complaint.facts|trans }}</td>
                    <td>{{ complaint.factsDate|date('d/m/Y') }}</td>
                    <td>{{ complaint.alert|trans }}</td>
                    <td>{{ complaint.meetingDate|date('d/m/Y') }}</td>
                    <td>{{ complaint.firstnameLastname }}</td>
                    <td>{{ complaint.status|trans }}</td>
                    <td>{{ complaint.aOpjName }}</td>
                    <td>
                        <a href="{{ path('complaint', {
                            id: complaint.declarationNumber
                        }) }}" target="_blank">
                            {{ complaint.declarationNumber }}
                        </a>
                    </td>
                    <td>{{ complaint.comments }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
