<div class="position-fixed">
    <div class="list-group">
        <a href="{{ path('complaint_summary', {'id':complaint.id}) }}"
           class="{{ html_classes('list-group-item', 'list-group-item-action', {'list-group-item-secondary': app.current_route == 'complaint_summary'}) }}"
           {% if app.current_route == 'complaint_summary' %}aria-current="true"{% endif %}>
            {{ 'pel.summary'|trans }}
        </a>
        <a href="#" class="list-group-item list-group-item-action">
            {{ 'pel.your.identity'|trans }}
            {% if complaint.identity.alertNumber %}
                <span class="badge bg-danger rounded-pill">{{ complaint.identity.alertNumber }}</span>
            {% endif %}
        </a>
        <a href="#" class="list-group-item list-group-item-action">
            {{ 'pel.description.of.facts'|trans }}
            {% if complaint.facts.alertNumber %}
                <span class="badge bg-danger rounded-pill">{{ complaint.facts.alertNumber }}</span>
            {% endif %}
        </a>
        <a href="#" class="list-group-item list-group-item-action"> {{ 'pel.objects.concerned'|trans }}</a>
        <a href="#" class="list-group-item list-group-item-action"> {{ 'pel.additional.informations'|trans }}</a>
    </div>
    <div class="row justify-content-md-center mt-3">
        <div class="col-10">
            <div class="d-grid gap-2 d-block">
                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                        data-bs-target="#modal-complaint-reject"
                        title="{{ 'pel.you.will.reject.the.declaration'|trans }}">
                    X {{ 'pel.reject'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>
{% embed "common/_modal.html.twig" with {'id':'complaint-reject', 'size':'lg'} %}
    {% block title %}{{ 'pel.you.will.reject.the.declaration'|trans }}{% endblock %}
    {% block body %}
        <div class="row">
            <div class="col">
                <label for="reason" class="form-label">{{ 'pel.refusal.reason'|trans }}</label>
                <select class="form-select" id="reason">
                    <option>{{ 'pel.appointment.needed'|trans }}</option>
                    <option>{{ 'pel.reorientation.other.solution'|trans }}</option>
                    <option>{{ 'pel.absence.of.penal.offense'|trans }}</option>
                    <option>{{ 'pel.insufisant.quality.to.act'|trans }}</option>
                    <option>{{ 'pel.victime.carence'|trans }}</option>
                    <option>{{ 'pel.other'|trans }}</option>
                </select>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col">
                <label for="reasonText" class="form-label">{{ 'pel.free.text'|trans }}</label>
                <textarea class="form-control" id="reasonText"></textarea>
            </div>
        </div>
    {% endblock %}
    {% block footer %}
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'pel.back'|trans }}</button>
        <button type="button" class="btn btn-danger">{{ 'pel.validate.the.refusal'|trans }}</button>
    {% endblock %}
{% endembed %}
