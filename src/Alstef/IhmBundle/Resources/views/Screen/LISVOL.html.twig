<div role="tabpanel" class="tab-pane active" id="{{idtab}}">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{'PANEL.CRITERE'|trans}}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <br>
                  {{ form_start (form, {
                  'attr':
                    {'class':'form-horizontal form-label-left',
                     'id':'form-screen-ecr',
                     'action':'LISVOL_afficher',
                     'method':'post'
                     }})
                  }}

                  <script type="text/javascript">
                      $(".form_datetime").datetimepicker({format: 'yyyy/mm/dd-hh:ii:ss'});
                  </script>

                  <div class="col-md-10 col-sm-4 col-xs-12">
                    {% for field in form %}
                      {% if field != form._token %}
                        {{include('AlstefIhmBundle:Form:Criteria.html.twig', { 'field' : field })}}
                      {% endif %}
                    {% endfor %}

                      <button type="submit" class="btn-primary btn-lg">{{'LIBELLE.SUBMIT'|trans}}</button>
                  </div>
                  {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{'PANEL.LISVOL'|trans}}</h2>
                    <ul class="nav navbar-right panel_toolbox">

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div id="datatable-content" style="display:none;">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                        </table>
                    </div>
                    <div id="loader" style="display:none;">
                        <p>{{ 'LIBELLE.DATATABLE_LOADINGRECORDS'|trans }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


